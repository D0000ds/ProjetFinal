                                    </div>
                                {% elseif moyenne.moyenne_note >= 3 %}
                                    <div class="rating">
                                        <i class="fa-solid fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-solid fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-solid fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                    </div>
                                {% elseif moyenne.moyenne_note >= 2 %}
                                    <div class="rating">
                                        <i class="fa-solid fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-solid fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                    </div>
                                {% else %}
                                    <div class="rating">
                                        <i class="fa-solid fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                        <i class="fa-regular fa-star" style="color: #EAC696;"></i>
                                    </div>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </div> 
                </a>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
